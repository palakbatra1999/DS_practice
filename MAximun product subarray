Better approach :: Generate all subarrays

 int maxProduct(vector<int>& nums) {

        int max=nums[0];

        for(int i=0;i<nums.size();i++)
        {
            int pro=nums[i];
            for(int j=i+1;j<nums.size();j++)
            {
                pro=pro*nums[j];

                if(pro>max)
                max=pro;

                if(max<nums[j])
                max=nums[j];
            }

            if(pro>max)
                max=pro;
        }
        return max;

    }
