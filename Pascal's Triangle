class Solution {
public:
    vector<vector<int>> generate(int n) {

        // arr will store the complete Pascal's Triangle
        // arr[i] represents the i-th row (0-based)
        vector<vector<int>> arr;

        // Loop to generate each row of the triangle
        for (int i = 0; i < n; i++) {

            // Create a row of size (i + 1)
            // Initialize all values with 1 because:
            // - First element is always 1
            // - Last element is always 1
            vector<int> v(i + 1, 1);

            // Fill only the middle elements of the row
            // First (j=0) and last (j=i) are already 1
            for (int j = 1; j < i; j++) {

                // Pascal's Triangle formula:
                // current = above-left + above-right
                // v[j] = arr[i-1][j-1] + arr[i-1][j]
                v[j] = arr[i - 1][j - 1] + arr[i - 1][j];
            }

            // Add the completed row to the triangle
            arr.push_back(v);
        }

        // Return the complete Pascal's Triangle
        return arr;
    }
};
